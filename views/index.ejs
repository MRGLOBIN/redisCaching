<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>Redis Tasks</title>
    <style>
      .del:checked + span {
        color: red;
      }

      .task-list {
        list-style: none;
      }
    </style>
  </head>
  <body>
    <form
      method="post"
      action="/task/add"
    >
      <label for="task">Add Task</label>
      <input
        type="text"
        name="task"
        placeholder="Add Task"
      />
      <button type="submit">Submit</button>
    </form>

    <%= title %>
    <form
      action="/task/delete"
      method="post"
    >
      <ul class="task-list">
        <% tasks.forEach(task => { %>
        <li>
          <label for="<%= task %>">
            <input
              type="checkbox"
              name="tasks"
              class="del"
              value="<%= task %>"
            /><span><%= task %></span>
          </label>
        </li>
        <% }) %>
      </ul>
      <button type="submit">Remove</button>
    </form>

    <h3>Next Bussiness Call</h3>
    Name: <%= call.name %><br />
    Company: <%= call.company %><br />
    Phone: <%= call.phone %><br />
    Time: <%= call.time %><br />

    <h3>Edit Next Call</h3>
    <form
      action="/call/add"
      method="post"
    >
      <label for="name">Contact Name</label><br />
      <input
        type="text"
        name="name"
        placeholder="Task Name"
      />
      <br /><br />
      <label>Company Name</label><br />
      <input
        type="text"
        name="company"
        placeholder="Company"
      />
      <br /><br />
      <label>Phone</label><br />
      <input
        type="text"
        name="phone"
        placeholder="Phone"
      />
      <br /><br />
      <label>Day & Time</label><br />
      <input
        type="text"
        name="time"
        placeholder="Time"
      />
      <br /><br />
      <button type="submit">Submit</button>
    </form>
  </body>
</html>
